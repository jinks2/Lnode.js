extends layout
block body
    form(action="/login", method="POST")
        fieldset
            legend Log in
            if (signupEmail)
                #{signupEmail}
                p Congratulations on signing up! Please login below
            p
                label Email
                input(name="user[email]", type="text", value=signupEmail)
            p
                label Password
                input(name="user[password]", type="password")
            p
                button submit
            p
                a(href="/") Go back